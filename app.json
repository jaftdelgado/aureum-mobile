{
  "expo": {
    "name": "aureum-mobile",
    "slug": "aureum-mobile",
    "scheme": "aureum",
    "version": "1.0.0",
    "experiments": {
      "tsconfigPaths": true
    },
    "plugins": [
      "expo-font",
      [
        "expo-image-picker",
        {
          "photosPermission": "La aplicación necesita acceso a tus fotos para subir la imagen del curso o perfil.",
          "cameraPermission": "La aplicación necesita acceso a la cámara para tomar fotos de perfil."
        }
      ]
    ],
    "orientation": "portrait",
    "userInterfaceStyle": "automatic",
    "splash": {
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.cesar.aureum",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "package": "com.cesar.aureum",
      "adaptiveIcon": {
        "backgroundColor": "#ffffff"
      }
    },
    "extra": {
      "eas": {
        "projectId": "41a117aa-682c-4aaa-b0fc-59ae96e48b8f"
      }
    }
  }
}
